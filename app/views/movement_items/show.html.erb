<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @movement_item %>

    <%= link_to 'Edit this movement_item', edit_movement_item_path(@movement_item), class: "mt-2 rounded-lg py-3 px-5 bg-naranja inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this movement_item', movement_item_path(@movement_item), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-naranja font-medium" %>
      <%= link_to '#', class: "relative inline-block text-sm font-medium text-white group focus:outline-none focus:ring", onclick: 'window.print();return false;'  do %>
        <span class="absolute inset-0 border border-naranja group-active:border-naranja"></span>
        <span class="block px-12 py-3 transition-transform bg-naranja border border-naranja active:border-naranja active:bg-red-500 group-hover:-translate-x-1 group-hover:-translate-y-1">Imprimir
      <% end %>
    </div>
    <%= link_to 'Back to movement_items', movement_items_path, class: "ml-2 rounded-lg py-3 px-5 bg-naranja inline-block font-medium" %>
  </div>
</div>
