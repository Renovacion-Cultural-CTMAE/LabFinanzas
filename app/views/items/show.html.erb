<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @item %>

    <%= link_to 'Edit this item', edit_item_path(@item), class: "mt-2 rounded-lg py-3 px-5 bg-naranha inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this item', item_path(@item), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-naranja font-medium" %>
    </div>
    <%= link_to 'Back to items', items_path, class: "ml-2 rounded-lg py-3 px-5 bg-naranja inline-block font-medium" %>
    <%= link_to 'Añadir Movimiento', new_movement_item_path, class: "ml-2 rounded-lg py-3 px-5 bg-azul inline-block font-medium" %>
    <%= link_to 'Añadir Dependencia', new_dependence_path, class: "ml-2 rounded-lg py-3 px-5 bg-azul inline-block font-medium" %>
    <%= link_to 'Añadir Cdp', new_cdp_path, class: "ml-2 rounded-lg py-3 px-5 bg-azul inline-block font-medium" %>
  </div>
</div>
